<%- include('../partials/header') -%>
<div class="container">
    <h1 style="text-align: center;"> Add New Comment to <%= player.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/players/<%= player._id%>/comments" method="POST">
            <div class="form-group">
                <textarea class="form-control" type="text" name="comment[text]" placeholder="text" required></textarea>
            </div>

             <div class="form-group">
                 <button class="btn btn-lg btn-primary btn-block"> Submit!</button>
            </div>
        </form>
        <a href="/players"> Go Back</a> 
    </div>
    
</div>


<%- include('../partials/footer') -%>